<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seasonal.mapper.ClassifyMapper">
    <resultMap id="pc" type="com.seasonal.pojo.Classify">
        <id column="id" property="id"></id>
        <!-- 配置1对1的关系  select查询 workCard这个对象的值来自于一个查询-->
        <!--<association property="workCard" column="id" select="day.day22.mapper.WorkCardMapper.findWorkCardByEmpId"></association>-->
        <collection property="composeGood" column="id" select="com.seasonal.mapper.ComposeGoodMapper.findMainComposeGoodByClassifyId"></collection>
    </resultMap>

    <select id="findAllByGeneralitiesId" resultMap="pc">
        select * from classify where generalities_id = #{generalitiesId}
    </select>

    <select id="findComposeGoodById" resultMap="pc">
        select * from classify where id=#{id}
    </select>

</mapper>